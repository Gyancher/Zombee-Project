<configs>
	<append xpath="/blocks">
		<block name="WorkingCharcoalGrill">
			<property name="Extends" value="cntCharcoalGrillRandomLootHelper" param1="DisplayInfo,CustomIcon,CustomIconTint"/>
			<property name="CreativeMode" value="Player"/>
			<property name="Model" value="#Entities/LootContainers?Grill_Simple_EmptyPrefab.prefab"/>
			<property name="DescriptionKey" value="furnitureGroupDesc"/>
			<property name="FilterTags" value="floot,ffurniture"/>
			<property name="Class" value="Campfire" />
			<property name="CustomIcon" value="cntCharcoalGrillClosed" />
			<property name="Place" value="TowardsPlacerInverted" />
			<property name="Stacknumber" value="1" />
			<property name="CanPickup" value="true" param1="WorkingCharcoalGrill" />
			<property name="Material" value="Mwood_weak" />
			<property name="LootList" value="427" />
			<drop event="Destroy" name="WorkingCharcoalGrill" count="1" />
			<drop event="Fall" name="woodDebris" count="1" prob="1.0"  stick_chance=".75" />
			<property name="HeatMapStrength" value="1"/>
			<property name="HeatMapTime" value="1200"/>
			<property name="HeatMapFrequency" value="25"/>
			<property name="Group" value="Food/Cooking,Decor" />
			<property name="ActiveRadiusEffects" value="+heatSource(3)"/>
			<property class="Workstation">
				<property name="Modules" value="tools,output,input"/>
				<property name="CraftingAreaRecipes" value="campfire" />
			</property> 
		</block>

		<block name="WorkingGassGrill">
			<property name="Extends" value="cntGasGrillRandomLootHelper" param1="DisplayInfo,CustomIcon,CustomIconTint"/>
			<property name="CreativeMode" value="Player"/>
			<property name="Model" value="#Entities/LootContainers?GasGrill_EmptyPrefab.prefab"/>
			<property name="DescriptionKey" value="furnitureGroupDesc"/>
			<property name="FilterTags" value="floot,ffurniture"/>
			<property name="DescriptionKey" value="workstationOvenDesc"/>
			<property name="Class" value="Campfire" />
			<property name="CanPickup" value="true" param1="WorkingGassGrill" />
			<property name="CustomIcon" value="cntGasGrillOpen" />
			<property name="Place" value="TowardsPlacerInverted" />
			<property name="Stacknumber" value="1" />
			<property name="Material" value="Mwood_weak" />
			<property name="LootList" value="427" />
			<drop event="Destroy" name="WorkingGassGrill" count="1" />
			<drop event="Fall" name="woodDebris" count="1" prob="1.0"  stick_chance=".75" />
			<property name="HeatMapStrength" value="1"/>
			<property name="HeatMapTime" value="1200"/>
			<property name="HeatMapFrequency" value="25"/>
			<property name="Group" value="Food/Cooking,Decor" />
			<property name="ActiveRadiusEffects" value="+heatSource(3)"/>
			<property class="Workstation">
				<property name="Modules" value="tools,output,input"/>
				<property name="CraftingAreaRecipes" value="campfire" />
			</property> 
		</block>
		
	</append>
</configs>